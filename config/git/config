[user]
	userConfigOnly = true
	name = seshotake
	email = seshotake@gmail.com
[hub]
	protocol = https
[github]
	user = seshotake
[core]
	quotePath = false
	ignorecase = false
	editor = helix
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[diff]
	colorMoved = default
[alias]
	back = reset HEAD~
	
	st = status
	ls = ls-files
	fa = fetch --all
	ca = commit -amend
	
	remotes = remote -v
	branches = branch -v -a
	upstream = branch --set-upstream-to
	
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	
	find = "!git ls-files | grep -i"
	rg = grep -Ii
	aliases = "!git config -l | grep alias | cut -c7-"

	clear = clean -fd
	nevermind = reset --hard HEAD
[help]
	autocrrect = 30
[init]
	defaultBranch = main