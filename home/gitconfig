[core]
	quotePath = false
	ignorecase = false
	editor = flatpak run re.sonny.Commit
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[diff]
	colorMoved = default
[alias]
	back = reset HEAD~
	
	st = status
	ls = ls-files
	fa = fetch --all
	ca = commit -amend
	
	remotes = remote -v
	branches = branch -v -a
	upstream = branch --set-upstream-to
	
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	
	find = "!git ls-files | grep -i"
	rg = grep -Ii
	aliases = "!git config -l | grep alias | cut -c7-"

	clear = clean -fd
	nevermind = reset --hard HEAD
	undo = reset --soft HEAD~1
[help]
	autocrrect = 30
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
