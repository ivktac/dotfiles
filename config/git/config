[core]
	quotePath = false
	ignorecase = false

[push]
	default = simple

[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
	
[help]
	autocrrect = 30
[init]
	defaultBranch = main

[alias]
	back = reset HEAD~
	
	st = status
	ls = ls-files
	fa = fetch --all
	ca = commit -amend
	
	remotes = remote -v
	branches = branch -v -a
	upstream = branch --set-upstream-to
	
	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	
	find = "!git ls-files | grep -i"
	rg = grep -Ii
	aliases = "!git config -l | grep alias | cut -c7-"

	clear = clean -fd
	nevermind = reset --hard HEAD
	undo = reset --soft HEAD~1

	lg="log --graph --all --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'"

