[user]
	email = git@tkachuk.email
	name = Ivan Tkachuk
[url "ssh://git@github.com/"]
	instedaOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
[core]
	quotePath = false
	ignorecase = false
	editor = nvim
	pager = delta --syntax-theme gruvbox-dark
[commit]
	verbose = true
	tempalte = ~/.git-commit-template
[push]
	default = current
	autoSetupRemote = true
[alias]
	st = status
	ls = ls-files
	fa = fetch --all

	remotes = remote -v
	branches = branch -v -a
	upstream = branch --set-upstream-to

	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend

	find = "!git ls-files | grep -i"
	rg = grep -Ii
	aliases = "!git config -l | grep alias | cut -c7-"

	clear = clean -fd
	nevermind = reset --hard HEAD
	undo = reset --soft HEAD~1

	new = checkout -b
[fetch]
	parallel = 10
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
