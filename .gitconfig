	email = 116971836+hxrv0q@users.noreply.github.com
	name = Ivan Tkachuk

[core]
	quotePath = false
	ignorecase = false
	editor = flatpak-spawn --host flatpak run re.sonny.Commit

[include]
	path = .gitconfig.local

[push]
	default = current

[alias]
	st = status
	ls = ls-files
	fa = fetch --all

	remotes = remote -v
	branches = branch -v -a
	upstream = branch --set-upstream-to

	discard = checkout --
	uncommit = reset --mixed HEAD~
	amend = commit --amend

	find = "!git ls-files | grep -i"
	rg = grep -Ii
	aliases = "!git config -l | grep alias | cut -c7-"

	clear = clean -fd
	nevermind = reset --hard HEAD
	undo = reset --soft HEAD~1

[fetch]
	parallel = 10

[pull]
	ff = only

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[init]
	defaultBranch = main

[hub]
	protocol = https

[github]
	user = hxrv0q
	
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential


